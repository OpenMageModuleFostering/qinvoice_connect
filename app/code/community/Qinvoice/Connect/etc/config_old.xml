<?xml version="1.0"?>
<!-- app/code/local/Qinvoice/Connect/etc/config.xml -->
<config>
    <modules>
        <Qinvoice_Connect>
            <version>2.1.1</version>
        </Qinvoice_Connect>
    </modules>
    <global>
        <blocks>
            <invoice>
                <class>Qinvoice_Connect_Block</class>
            </invoice>
            <invoice_adminhtml>
                <class>Qinvoice_Connect_Block_Adminhtml</class>
            </invoice_adminhtml>
        </blocks>
        <models>
            <invoice>
                <class>Qinvoice_Connect_Model</class>
            </invoice>
            <sales>
                <rewrite>
                    <order>Qinvoice_Connect_Model_Rewrite_Order</order>
                </rewrite>
            </sales>
            <modelrewrite>
                <class>Qinvoice_Connect_Model_Rewrite</class>
            </modelrewrite>
        </models>
        <events>
            <controller_front_init_before>
                <observers>
                    <connect>
                        <class>invoice/order_observer</class>
                        <method>qinvoiceCall</method>
                    </connect>
                </observers>
            </controller_front_init_before>
            <qinvoice_connect_order_status_change>
                <observers>
                    <connect>
                        <class>invoice/order_observer</class>
                        <method>orderStatusChange</method>
                    </connect>
                </observers>
            </qinvoice_connect_order_status_change>

            <sales_order_place_after>
                <observers>
                    <connect>
                        <class>invoice/order_observer</class>
                        <method>sendOnOrder</method>
                    </connect>
                </observers>
            </sales_order_place_after> 

            <sales_order_payment_pay>
                <observers>
                    <connect>
                        <class>invoice/order_observer</class>
                        <method>sendOnPayment</method>
                    </connect>
                </observers>
            </sales_order_payment_pay> 
        </events>
       <helpers>
            <invoice>
                <class>Qinvoice_Connect_Helper</class>
            </invoice>
        </helpers>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <invoice_options>
                                            <title>Store Hello World Module Section</title>
                                        </invoice_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    
</config> 